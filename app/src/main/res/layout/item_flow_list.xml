<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="vertical"
    android:paddingTop="@dimen/width_3_160">


    <LinearLayout
        android:layout_marginLeft="@dimen/width_5_160"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="48dp">

        <TextView
            android:id="@+id/news_message_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:text="欢迎您再次回到XM"
            android:textColor="@color/grey" />
    </LinearLayout>

    <TextView
        android:id="@+id/news_time_iv"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="@color/grey"
        android:layout_marginRight="@dimen/width_3_160"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>